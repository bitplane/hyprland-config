; EWW Configuration for Hyprland
; Main config file - includes soundboard widgets

(include "./soundboard.yuck")

; Soundboard window - fullscreen overlay with centered content
(defwindow soundboard
  :monitor 0
  :stacking "overlay"
  :exclusive false
  :focusable true
  :geometry (geometry
    :x "0%"
    :y "0%"
    :width "100%"
    :height "100%"
    :anchor "top left")
  (soundboard-main))

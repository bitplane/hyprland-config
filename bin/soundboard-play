#!/bin/bash
# Play a soundboard sample to broadcast sink (routes to both mic and speakers)
# Usage: soundboard-play <relative-path-to-sample>

SAMPLE_DIR=~/.config/soundboard
SAMPLE="$SAMPLE_DIR/$1"

if [ ! -f "$SAMPLE" ]; then
    echo "Sample not found: $SAMPLE" >&2
    exit 1
fi

# Play to broadcast sink (looped to both soundboard and speakers)
paplay --device=broadcast --volume=49152 "$SAMPLE" &
